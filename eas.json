{
  "cli": {
    "version": ">= 3.0.0",
    "appVersionSource": "remote"
  },
  "hooks": {
    "postinstall": "node scripts/generate-commit-hash.js"
  },
  "build": {
    "preview": {
      "android": {
        "buildType": "apk"
      },
      "distribution": "internal"
    },
    "production": {
      "android": {
        "buildType": "app-bundle"
      },
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {}
  }
}
